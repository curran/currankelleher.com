---
import Layout from '../../layouts/Layout.astro';

const posts = await Astro.glob('./*.md');
posts.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
---

<Layout title="Data Visualization Blog | Curran Kelleher">
  <main class="blog-index">
    <h1 class="text-gradient">Data Visualization Blog</h1>
    <div class="posts">
      {posts.map(post => (
        <article class="post-card">
          <a href={post.url}>
            <h2>{post.frontmatter.title}</h2>
            {post.frontmatter.date && (
              <time>
                {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            )}
            {post.frontmatter.description && (
              <p>{post.frontmatter.description}</p>
            )}
            <div class="read-more">Read More â†’</div>
          </a>
        </article>
      ))}
    </div>
  </main>
</Layout>

<style>
  .blog-index {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  h1 {
    font-size: 3.5rem;
    text-align: center;
    margin-bottom: 3rem;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .posts {
    display: grid;
    gap: 2rem;
  }

  .post-card {
    background: linear-gradient(
      45deg,
      rgba(var(--accent), 0.1),
      rgba(var(--accent-light), 0.05)
    );
    border-radius: 15px;
  }

  .post-card a {
    display: block;
    padding: 2rem;
    color: inherit;
    text-decoration: none;
  }

  .post-card:hover {
    background: linear-gradient(
      45deg,
      rgba(var(--accent), 0.2),
      rgba(var(--accent-light), 0.1)
    );
  }

  .post-card h2 {
    font-size: 1.5rem;
    color: rgb(var(--accent-light));
    margin: 0 0 0.5rem;
  }

  .post-card:hover h2 {
    color: rgb(var(--accent));
  }

  .post-card time {
    font-size: 0.9rem;
    color: rgba(var(--accent-light), 0.8);
    display: block;
    margin-bottom: 1rem;
  }

  .post-card p {
    color: #ffffff;
    margin: 0;
    line-height: 1.6;
  }

  .read-more {
    margin-top: 1.5rem;
    color: rgb(var(--accent-light));
    font-weight: 500;
  }
</style>